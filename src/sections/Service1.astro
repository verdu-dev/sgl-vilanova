---
import { getI18n } from "@/i18n/config";

import Exp from "@/assets/Exp.astro";
import TotemSlider from "@/components/TotemSlider.astro";
import Link from "@/components/Link.astro";

const { currentLocale } = Astro;
const { service1 } = getI18n(currentLocale).home;
---

<section
  id={service1.id}
  class:list={[
    "relative flex w-full flex-col items-center",
    "before:absolute before:top-0 before:z-10 before:h-1/2 before:w-full before:bg-gradient-to-b before:from-neutral-950 before:to-neutral-950/0",
  ]}
>
  <article
    class="z-20 flex max-w-7xl flex-col items-center justify-center gap-20 px-6 pt-32 text-center md:pt-40 lg:flex-row lg:pt-60 lg:text-left"
  >
    <div class="flex w-full flex-col gap-6 lg:w-2/3">
      <h2 class="text-2xl font-bold md:text-3xl lg:text-4xl">
        {service1.title}
      </h2>

      <p set:html={service1.description_html} />

      <ul class="flex flex-col items-center text-neutral-400 lg:items-start">
        <li
          class:list={[
            "relative flex items-center gap-1 py-2",
            "before:absolute before:bottom-0 before:left-1/2 before:h-px before:w-20 before:-translate-x-1/2 before:bg-neutral-50/10",
            "lg:before:left-0 lg:before:translate-x-0",
          ]}
        >
          <Exp class="h-3 text-sgl" />
          <p>
            {service1.list_item1}
          </p>
        </li>
        <li
          class:list={[
            "relative flex items-center gap-1 py-2",
            "before:absolute before:bottom-0 before:left-1/2 before:h-px before:w-20 before:-translate-x-1/2 before:bg-neutral-50/10",
            "lg:before:left-0 lg:before:translate-x-0",
          ]}
        >
          <Exp class="h-3 text-sgl" />
          <p>
            {service1.list_item2}
          </p>
        </li>
        <li class="flex items-center gap-1 py-2">
          <Exp class="h-3 text-sgl" />
          <p>
            {service1.list_item3}
          </p>
        </li>
      </ul>
    </div>

    <aside class="w-full md:w-1/2 lg:w-1/3">
      <TotemSlider />
    </aside>
  </article>

  <div
    class="z-20 mt-20 flex w-full max-w-7xl flex-col items-center justify-center border-b border-t border-neutral-50/10 px-6 py-10 text-center"
  >
    <p class="max-w-4xl text-lg">
      {service1.footer_description}
    </p>

    <Link
      href="/Dossier-tecnic_SGL-Vilanova.pdf"
      target="_blank"
      class="mt-8 max-w-72 flex-auto"
    >
      {service1.footer_link}
    </Link>

    <p class="mt-12">
      {service1.footer_certificates}
    </p>

    <ul
      class="mt-8 flex items-center justify-center gap-8 saturate-50 md:justify-start"
    >
      <li>
        <img
          width="48"
          height="48"
          src="/tuv-rheinland.webp"
          alt="TÃœV Rheinland"
          decoding="async"
          loading="lazy"
          class="h-12 object-contain"
        />
      </li>
      <li>
        <img
          width="40"
          height="64"
          src="/hormigon-expert.png"
          alt="Hormigon Expert Anefhop"
          decoding="async"
          loading="lazy"
          class="h-16 -translate-y-2 object-contain"
        />
      </li>
      <li>
        <img
          width="103"
          height="28"
          src="/fantek.svg"
          alt="Fantek Industrial"
          decoding="async"
          loading="lazy"
          class="h-7 object-contain"
        />
      </li>
    </ul>
  </div>
</section>
