---
import Exp from "@/assets/Exp.astro";
import Iso from "@/assets/Iso.astro";
---

<header
  class:list={[
    "fixed top-0 z-50 flex w-full justify-center border-neutral-50/10 transition-all",
    false && "border-b backdrop-blur-xl",
  ]}
>
  <div class="flex w-full max-w-7xl items-center justify-between p-4">
    <a href="/">
      <Iso class:list={["h-20 py-3 transition-all", false && "h-10"]} />
    </a>

    <nav class="hidden md:flex">
      <ul class="flex">
        <li class="flex">
          <a
            href="/"
            class="px-4 py-2 font-medium transition-colors hover:text-sgl"
          >
            Inicio
          </a>
        </li>

        <li class="flex">
          <a
            href="/servicios"
            class="px-4 py-2 font-medium transition-colors hover:text-sgl"
          >
            Servicios
          </a>
        </li>

        <li class="flex">
          <a
            href="/clientes"
            class="px-4 py-2 font-medium transition-colors hover:text-sgl"
          >
            Clientes
          </a>
        </li>

        <li class="flex">
          <a
            href="/contacto"
            class="px-4 py-2 font-medium transition-colors hover:text-sgl"
          >
            Contacto
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const header = document.querySelector("header") as HTMLElement;
  const logo = document.querySelector("header a>svg") as HTMLElement;

  function setScroll() {
    if (window.scrollY > 0) {
      header.classList.add("backdrop-blur-xl");
      header.classList.add("border-b");
      logo.classList.add("h-10");

      logo.classList.remove("h-20");
      logo.classList.remove("py-3");
    } else {
      header.classList.remove("backdrop-blur-xl");
      header.classList.remove("border-b");
      logo.classList.remove("h-10");

      logo.classList.add("h-20");
      logo.classList.add("py-3");
    }
  }

  setScroll();
  window.addEventListener("scroll", setScroll);
</script>
